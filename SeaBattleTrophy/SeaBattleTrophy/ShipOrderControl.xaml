<UserControl x:Class="SeaBattleTrophy.WPF.ShipOrderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SeaBattleTrophy.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             DataContextChanged="HandleDataContextChanged">
    <StackPanel>
        <Button Height="30" Click="ForwardButtonClicked">Straight ahead!</Button>
        <Button Height="30" Click="CCWButtonClicked">Turn 15deg CCW</Button>
        <Button Height="30" Click="CWButtonClicked">Turn 15deg CW</Button>
    </StackPanel>
</UserControl>
