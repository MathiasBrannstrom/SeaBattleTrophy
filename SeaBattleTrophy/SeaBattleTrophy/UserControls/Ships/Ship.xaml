<UserControl x:Class="SeaBattleTrophy.WPF.UserControls.Ships.Ship"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SeaBattleTrophy.WPF.UserControls.Ships"
             xmlns:shipVM="clr-namespace:SeaBattleTrophy.WPF.ViewModels"
             xmlns:utilities="clr-namespace:Utilities;assembly=Utilities"
             mc:Ignorable="d" d:DataContext="{d:DesignInstance shipVM:ShipViewModel}" x:Name="thisControl"
             HorizontalAlignment="Left" VerticalAlignment="Top">
    <UserControl.Resources>
        <utilities:DoubleConverter x:Key="DoubleConverter" />
    </UserControl.Resources>
    <UserControl.RenderTransform>
        <TranslateTransform X="{Binding XPosInPixels}" Y="{Binding YPosInPixels}" />
    </UserControl.RenderTransform>
    
    <Grid Width="{Binding LengthInPixels}" Height="{Binding WidthInPixels}">
        <Grid.RenderTransform>
            <TransformGroup>
                <TranslateTransform X="{Binding ElementName=thisControl, Path=ActualWidth,  ConverterParameter=-0.5, Converter={StaticResource DoubleConverter}}"
                            Y="{Binding ElementName=thisControl, Path=ActualHeight,  ConverterParameter=-0.5, Converter={StaticResource DoubleConverter}}"/>
                <RotateTransform Angle="{Binding RotationAngle}" CenterX="0.5" CenterY="0.5"/>
            </TransformGroup>
        </Grid.RenderTransform>
        <Border Background="BurlyWood" BorderBrush="BlanchedAlmond" BorderThickness="2">
            <Grid>
                <Rectangle Fill="Black" Height="3" Width="6" HorizontalAlignment="Right" VerticalAlignment="Center" />
                <Ellipse Fill="Black" Height="3" Width="3" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
